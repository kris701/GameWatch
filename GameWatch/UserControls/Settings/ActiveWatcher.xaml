<UserControl x:Class="GameWatch.UserControls.ActiveWatcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameWatch.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" Margin="5">
    <StackPanel>
        <Label Content="UI Name"/>
        <TextBox x:Name="UINameTextbox"/>
        <Label Content="Process Name"/>
        <TextBox x:Name="ProcessNameTextbox" />
        <Label Content="Allowed Time (Sec)"/>
        <TextBox x:Name="AllowedTimeTextbox" PreviewTextInput="AllowedTimeTextbox_PreviewTextInput"/>
        <Button x:Name="UpdateButton" Content="Update" Click="UpdateButton_Click"/>
    </StackPanel>
</UserControl>

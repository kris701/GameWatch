<UserControl x:Class="GameWatch.UserControls.Overview.AddNewWatchersLabelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameWatch.UserControls.Overview"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="No watchers are currently active" FontSize="20" Style="{StaticResource StandartLabelStyle}"/>
            <Label Content="You can add watchers in the settings menus" Style="{StaticResource StandartLabelStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>

<Window x:Class="GameWatch.UserControls.Notification.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWatch.UserControls.Notification"
        mc:Ignorable="d"
        Title="NotificationWindow" Height="500" Width="500" AllowsTransparency="True" WindowStyle="None" Topmost="True" Background="#D5404042" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="AllowedTimeLabel" Content="Allowed time for [] exceeded" FontSize="20" HorizontalAlignment="Center" Style="{StaticResource StandartLabelStyle}"/>
            <Button x:Name="AcceptButton" Content="Stop timer" Click="AcceptButton_Click" Margin="5" Style="{StaticResource StandartButtonStyle}"/>
            <Button x:Name="AcceptDelayButton" Content="Add 15 min to timer" Click="AcceptDelayButton_Click"  Margin="5" Style="{StaticResource StandartButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>

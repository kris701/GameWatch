<Window x:Class="GameWatch.UserControls.Confirmation.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWatch.UserControls.Confirmation"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="200" Width="400" AllowsTransparency="True" WindowStyle="None" Topmost="True" Background="#D5404042" Loaded="Window_Loaded"  WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Are you sure?" FontSize="20" HorizontalAlignment="Center" Style="{StaticResource StandartLabelStyle}"/>
            <Label x:Name="TitleLabel" Content="Text" FontSize="10" HorizontalAlignment="Center" Style="{StaticResource StandartLabelStyle}"/>
            <Button x:Name="AcceptButton" Content="Accept" Click="AcceptButton_Click"  Margin="5" Style="{StaticResource StandartExitButtonStyle}"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click"  Margin="5" Style="{StaticResource StandartGreenButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>

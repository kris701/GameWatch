<Window x:Class="GameWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:GameWatch"
        mc:Ignorable="d"
        Title="GameWatch" Height="300" Width="800" Closing="Window_Closing" Loaded="Window_Loaded" AllowsTransparency="True" WindowStyle="None" Background="#721D2B40" Opacity="0.8" Deactivated="Window_Deactivated">
    <StackPanel x:Name="MainPanel">
        <tb:TaskbarIcon x:Name="myNotifyIcon"
                        Visibility="Visible"
                        ToolTipText="GameWatch - Double click to open" 
                        PopupActivation="All" 
                        TrayMouseDoubleClick="myNotifyIcon_PopupOpened"
                        TrayRightMouseDown="myNotifyIcon_TrayRightMouseDown"/>
    </StackPanel>
</Window>
